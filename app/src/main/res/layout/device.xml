<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/appWhite"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="7dp"
    android:clickable="false">

    <android.support.constraint.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/constraintLayout">

        <TextView
            android:text="Kevin@MacBook"
            android:layout_width="0dp"
            android:id="@+id/deviceName"
            tools:layout_constraintTop_creator="1"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingTop="8dp"
            android:background="@android:color/transparent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingLeft="8dp"
            android:paddingBottom="0dp"
            android:layout_height="30dp"
            android:textColor="@color/appBlack"
            android:textSize="14sp"
            android:textStyle="normal|bold"
            android:textAllCaps="true" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/deviceName"
            android:minHeight="100dp"
            app:layout_constraintHorizontal_bias="0.0">

            <TextView
                android:text="Command history empty"
                android:layout_height="wrap_content"
                android:id="@+id/lastCommandText"
                android:paddingLeft="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="14dp"
                android:textSize="16sp"
                android:fontFamily="monospace"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="0dp"
                android:textStyle="normal|bold"
                app:layout_constraintBottom_toTopOf="@+id/unpairButton"
                app:layout_constraintTop_toBottomOf="@+id/lastCommandTimeText"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_constraintVertical_bias="0.0"
                android:background="@drawable/terminal_bg_bottom"
                app:layout_constraintRight_toRightOf="parent"
                android:textColor="@color/appWhite" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lastCommandTimeText"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="5dp"
                android:textSize="12sp" />

            <TextView
                android:text="Last SSH Command"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/lastCommandTitle"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textAllCaps="true"
                android:paddingLeft="10dp"
                android:paddingTop="4dp"
                android:textSize="10sp"
                app:layout_constraintBottom_toTopOf="@+id/lastCommandText"
                app:layout_constraintRight_toRightOf="@+id/lastCommandTimeText"
                android:background="@color/appBlack"
                android:textColor="@color/appWhite"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="0.0"
                android:paddingBottom="0dp" />

            <Button
                android:layout_width="wrap_content"
                android:id="@+id/unpairButton"
                android:text="Unpair"
                android:textColor="@color/colorDestructive"
                app:layout_constraintTop_toBottomOf="@+id/lastCommandText"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="14sp"
                android:backgroundTint="@color/colorDestructive"
                android:background="@drawable/flat_button"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:layout_height="48dp"
                app:layout_constraintVertical_bias="0.75" />

            <Button
                android:layout_width="wrap_content"
                android:id="@+id/moreButton"
                android:text="More"
                android:textColor="@color/colorPrimary"
                app:layout_constraintTop_toBottomOf="@+id/lastCommandText"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="14sp"
                android:backgroundTint="@color/colorPrimary"
                android:background="@drawable/flat_button"
                android:layout_marginBottom="5dp"
                app:layout_constraintVertical_bias="0.0"
                android:layout_marginTop="10dp"
                android:layout_height="48dp" />
        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
